{
  "name": "irembocare-plus",
  "version": "1.3.0",
  "description": "Complete Health Assistant for Rwanda - Find healthcare services, medication information, first-aid guidance, and AI-powered medical consultation",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/",
    "build": "npm run lint && npm test",
    "deploy": "chmod +x deploy.sh && ./deploy.sh",
    "docker:build": "docker build -t irembocare .",
    "docker:build:prod": "docker build -t irembocare:latest --target production .",
    "docker:run": "docker run -p 8080:8080 --env-file .env irembocare",
    "docker:run:prod": "docker run -p 8080:8080 --env-file .env irembocare:latest",
    "docker:stop": "docker stop $(docker ps -q --filter ancestor=irembocare)",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "pm2:start": "pm2 start src/app.js --name irembocare",
    "pm2:stop": "pm2 stop irembocare",
    "pm2:restart": "pm2 restart irembocare",
    "pm2:logs": "pm2 logs irembocare",
    "health:check": "curl -f http://localhost:8080/health || exit 1",
    "api:test": "npm run test:health && npm run test:medication && npm run test:firstaid && npm run test:weather && npm run test:news",
    "test:health": "curl -s 'http://localhost:8080/api/health-services?location=Bugesera' | jq .",
    "test:medication": "curl -s 'http://localhost:8080/api/medication?disease=malaria' | jq .",
    "test:firstaid": "curl -s 'http://localhost:8080/api/first-aid?condition=Burns' | jq .",
    "test:weather": "curl -s 'http://localhost:8080/api/weather-health-tips?location=Kigali' | jq .",
    "test:news": "curl -s 'http://localhost:8080/api/health-news' | jq .",
    "test:enhanced": "curl -s 'http://localhost:8080/api/health-services/search?location=Bugesera&telemedicine=true' | jq .",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "update": "npm update && npm audit fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "logs:view": "tail -f logs/app.log",
    "logs:clear": "rm -f logs/app.log"
  },
  "keywords": [
    "healthcare",
    "rwanda",
    "medical",
    "ai-doctor",
    "telemedicine",
    "first-aid",
    "medication",
    "hospital-finder",
    "health-services",
    "emergency",
    "medical-consultation"
  ],
  "author": {
    "name": "IremboCare+ Team",
    "email": "support@irembocare.rw",
    "url": "https://irembocare.rw"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/irembocare/irembocare-plus.git"
  },
  "bugs": {
    "url": "https://github.com/irembocare/irembocare-plus/issues"
  },
  "homepage": "https://irembocare.rw",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "debug": "^4.4.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "finalhandler": "^2.1.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "optionalDependencies": {
    "pm2": "^5.3.0"
  },
  "config": {
    "port": 8080,
    "environment": "development"
  },
  "files": [
    "src/",
    "public/",
    "package.json",
    "README.md",
    "LICENSE",
    "Dockerfile",
    "deploy.sh"
  ],
  "publishConfig": {
    "access": "public"
  }
}
